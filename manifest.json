{
	"manifest_version": 2,
	"default_locale": "en",
	"name": "__MSG_ext_name__",
	"description": "__MSG_ext_desc__",
	"version": "1.0.0",
	"background": {
		"persistent": false,
		"scripts": [ "common_lib.js", "background.js" ]
	},
	"browser_action": {
		"default_title": "__MSG_ext_name__",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"js": [ "lib/jquery-3.5.0.min.js", "newTab.js" ],
			"matches": [
				"http://www.oddcast.com/ttsdemo/index.php",
				"https://miraitranslate.com/trial/",
				"https://miraitranslate.com/en/trial/"
			],
			"run_at": "document_end"
		},
		{
			"js": [ "lib/jquery-3.5.0.min.js", "bubble_lib.js", "currentTab.js" ],
			"css": [
				"currentTab.css",
				"css/brands.min.css",
				"css/solid.min.css",
				"css/font-awesome.min.css",
				"css/material-icons.css",
				"css/materialdesignicons.min.css"
			],
			"matches": [ "\u003Call_urls>" ],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [ "images/*", "webfonts/*", "icons/*", "*.json" ],
	"content_security_policy": "script-src 'self' 'unsafe-eval' chrome-extension-resource: ; object-src 'self' ; child-src 'self' ; style-src 'unsafe-inline' ; frame-src 'self' ; default-src 'self' ; img-src 'self' data: *; connect-src 'self' ",
	"icons": {
		"16": "icons/icon_16.png",
		"19": "icons/icon_19.png",
		"38": "icons/icon_38.png",
		"128": "icons/icon_128.png"
	},
	"permissions": [ "storage", "activeTab", "tabs", "unlimitedStorage", "contextMenus", "downloads" ]
}
