{
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "A Jump to the Sky Turns to a Riderkick",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "js": ["contentScript.js"],
      "matches": ["http://www.oddcast.com/ttsdemo/index.php"],
      "run_at": "document_end"
    }, {
      "js": ["miraiScript.js"],
      "matches": ["https://miraitranslate.com/trial/", "https://miraitranslate.com/en/trial/"],
      "run_at": "document_end"
    },
    {
      "js": ["currentTab.js"],
      "css": ["currentTab.css"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["images/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval' chrome-extension-resource: ; object-src 'self' ; child-src 'self' ; style-src 'self' ; default-src 'self' ; img-src 'self' ; connect-src 'self' ",
  "description": "A simple clipboard with which you can stack pieces of text while reading",
  "icons": {
    "16": "icons/icon_16.png",
    "19": "icons/icon_19.png",
    "38": "icons/icon_38.png",
    "128": "icons/icon_128.png"
  },
  "manifest_version": 2,
  "name": "Staktekst",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus"
  ],
  "version": "0.1.0"
}